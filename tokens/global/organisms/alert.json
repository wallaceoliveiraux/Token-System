{
  "alert": {
    "icon": {
      "positive": {
        "value": {
          "border": "{color.positive.base}",
          "borderWidth": "{borderWidth.md}",
          "height": "{size.lg}",
          "width": "{size.lg}"
        },
        "type": "composition"
      },
      "negative": {
        "value": {
          "border": "{color.negative.base}",
          "borderWidth": "{borderWidth.md}",
          "height": "{size.lg}",
          "width": "{size.lg}"
        },
        "type": "composition"
      },
      "warning": {
        "value": {
          "height": "{size.lg}",
          "width": "{size.lg}",
          "fill": "{color.warning.base}"
        },
        "type": "composition"
      },
      "info": {
        "value": {
          "height": "{size.lg}",
          "width": "{size.lg}",
          "fill": "{color.info.base}"
        },
        "type": "composition"
      },
      "close": {
        "value": {
          "fill": "{color.grey.lighter}",
          "height": "{size.md}",
          "width": "{size.md}"
        },
        "type": "composition"
      }
    },
    "text": {
      "title": {
        "value": {
          "fill": "{color.base.onBase}",
          "typography": "{mobile.subtitle.sm}"
        },
        "type": "composition"
      },
      "description": {
        "value": {
          "typography": "{mobile.small.md}",
          "fill": "{color.base.onBase}",
          "opacity": "{opacity.60}"
        },
        "type": "composition"
      }
    },
    "content": {
      "body": {
        "value": {
          "fill": "{color.base.surface}",
          "verticalPadding": "{spacing.sm}",
          "horizontalPadding": "{spacing.md}",
          "borderRadius": "{borderRadius.md}",
          "itemSpacing": "{spacing.md}",
          "border": "{color.grey.lightest}",
          "borderWidth": "{borderWidth.sm}"
        },
        "type": "composition"
      },
      "text": {
        "value": {
          "itemSpacing": "{spacing.none}"
        },
        "type": "composition"
      }
    }
  }
}